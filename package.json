{
  "name": "centro",
  "description": "The place where you were.",
  "version": "0.0.1",
  "author": "Kazuya Hara <iam@kazuyahara.dev>",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@google/semantic-release-replace-plugin": "^1.1.0",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^7.0.0",
    "prettier": "^2.7.1",
    "semantic-release": "^19.0.3"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "license": "MIT",
  "private": true,
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/changelog",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      "@semantic-release/commit-analyzer",
      [
        "@google/semantic-release-replace-plugin",
        {
          "replacements": [
            {
              "files": [
                "package.json",
                "web/package.json"
              ],
              "from": "\"version\": \".*\"",
              "to": "\"version\": \"${nextRelease.version}\""
            }
          ]
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json",
            "web/package.json"
          ],
          "message": "chore(release): ${nextRelease.gitTag} [skip ci]"
        }
      ],
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "echo ::set-output name=version::${nextRelease.version}"
        }
      ]
    ]
  },
  "repository": "https://github.com/KazuyaHara/centro",
  "scripts": {
    "build": "yarn workspaces run build",
    "commit": "npx cz",
    "deploy:dev": "yarn build && firebase use default && firebase deploy",
    "deploy:prd": "yarn build && firebase use production && firebase deploy && firebase use default",
    "deploy:stg": "yarn build && firebase use staging && firebase deploy && firebase use default",
    "eslint": "yarn workspaces run eslint",
    "prepare": "husky install",
    "prettier": "prettier -w firebase.json package.json README.md web/*.json web/src/**/*.{ts,tsx,json}",
    "web": "yarn workspace web"
  },
  "workspaces": {
    "packages": [
      "web"
    ]
  }
}
