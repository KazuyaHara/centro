rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function authenticated() {
      return request.auth != null;
    }

    match /users/{userId} {
      function self() {
        return authenticated() && request.auth.uid == userId;
      }

      match /footprints/{footprintId} {
        allow write: if self();
      }
    }
  }
}